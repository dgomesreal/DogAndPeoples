@model List<People>

@{
    int i = 1;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Onwner Name</th>
            <th scope="col">Dog Name</th>
            <th scope="col">Breed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
        <tr>
            <th scope="row">@i</th>
            <td>@p.PeopleName</td>
            <td>@p.Dog.DogName</td>
            <td>@p.Dog.DogBreed</td>
            <td><a asp-controller="Post" asp-action="Remove" asp-route-id="@p.PeopleID">Delete</a></td>
            <td><a asp-controller="Post" asp-action="Edit" asp-route-id="@p.PeopleID">Edit</a></td>
        </tr>
            i++;
        }
    </tbody>
</table>

@section Scripts{
    <partial name="_Scripts" />
}
